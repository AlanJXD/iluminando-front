---
import AdminLayout from '../../components/AdminLayout';
import AdminDashboard from '../../components/AdminDashboard';
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="noindex, nofollow" />
		<title>Dashboard - Panel Administrativo | Iluminando</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				margin: 0;
				padding: 0;
				background: #0f0f0f;
				font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
			}

			/* PrimeReact Custom Styles for Dark Mode */
			.p-component {
				font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
			}

			.p-datatable {
				border: none;
			}

			.p-datatable .p-datatable-thead > tr > th {
				background: #1a1a1a;
				color: #9ca3af;
				border-color: #374151;
				padding: 1rem;
				font-weight: 600;
			}

			.p-datatable .p-datatable-tbody > tr {
				background: #1a1a1a;
				color: #fff;
			}

			.p-datatable .p-datatable-tbody > tr:hover {
				background: #2d2d2d;
			}

			.p-datatable .p-datatable-tbody > tr > td {
				border-color: #374151;
				padding: 1rem;
			}

			.p-paginator {
				background: #1a1a1a;
				color: #fff;
				border-color: #374151;
				padding: 0.5rem 1rem;
			}

			.p-paginator .p-paginator-pages .p-paginator-page {
				color: #9ca3af;
				min-width: 2.5rem;
				height: 2.5rem;
			}

			.p-paginator .p-paginator-pages .p-paginator-page.p-highlight {
				background: #ffbb01;
				color: #1a1a1a;
				border-color: #ffbb01;
			}

			.p-menu {
				background: transparent;
				border: none;
				color: #fff;
			}

			.p-menu .p-menuitem-link {
				color: #9ca3af;
				padding: 0.75rem 1rem;
				border-radius: 0.5rem;
				transition: all 0.3s;
			}

			.p-menu .p-menuitem-link:hover {
				background: #2d2d2d;
				color: #fff;
			}

			.p-menu .p-menuitem-link .p-menuitem-icon {
				color: #9ca3af;
				margin-right: 0.5rem;
			}

			.p-menu .p-menuitem-link:hover .p-menuitem-icon {
				color: #ffffff;
			}

			.p-menu .p-submenu-header {
				color: #9ca3af;
				background: transparent;
				padding: 0.75rem 1rem;
			}

			.p-card {
				box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
			}

			.p-card .p-card-title {
				color: #fff;
				font-size: 1.125rem;
				font-weight: 600;
				margin-bottom: 1rem;
			}

			.p-card .p-card-content {
				padding: 0;
			}

			.p-card .p-card-body {
				padding: 1.5rem;
			}

			.p-sidebar {
				background: #1a1a1a;
			}

			.p-sidebar-header {
				padding: 1.25rem;
			}

			.p-sidebar-content {
				padding: 0;
			}

			.p-button {
				font-weight: 600;
				background: #ffffff !important;
				color: #1a1a1a !important;
				border: none !important;
			}

			.p-button:hover {
				background: #e5e5e5 !important;
			}

			.p-button.p-button-text {
				background: transparent !important;
				border: none !important;
				color: #ffffff !important;
			}

			.p-button.p-button-text:hover {
				background: rgba(255, 255, 255, 0.05) !important;
			}

			.p-button.p-button-rounded {
				border-radius: 50%;
				width: 2.5rem;
				height: 2.5rem;
			}

			.p-tag {
				padding: 0.25rem 0.75rem;
				border-radius: 0.375rem;
				font-size: 0.875rem;
				font-weight: 600;
			}

			.p-tag.p-tag-success {
				background: #10b981;
				color: #fff;
			}

			.p-tag.p-tag-warning {
				background: #f59e0b;
				color: #fff;
			}

			.p-tag.p-tag-info {
				background: #3b82f6;
				color: #fff;
			}

			.p-avatar {
				background-color: #ffffff !important;
				color: #1a1a1a !important;
			}
		</style>
	</head>
	<body>
		<AdminLayout client:load title="Dashboard">
			<AdminDashboard client:load />
		</AdminLayout>
	</body>
</html>
