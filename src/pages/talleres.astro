---
import '../styles/global.css'
import TopNav from '../components/TopNav'
import TalleresPage from '../components/TalleresPage'
import Footer from '../components/Footer'
import WhatsAppButton from '../components/WhatsAppButton'
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Talleres y cursos de sublimación y neón personalizado" />
		<title>Cursos y Talleres | Iluminando</title>
	</head>
	<body class="bg-white text-gray-900">
		<TopNav client:load />

		<!-- Banner -->
		<section class="relative w-full h-[400px] md:h-[500px] overflow-hidden -mt-20 pt-20">
			<img
				src="/img/img11.jpg"
				alt="Banner Talleres Iluminando"
				class="w-full h-full object-cover absolute inset-0"
			/>
			<!-- Overlay oscuro para mejorar legibilidad -->
			<div class="absolute inset-0 bg-black/50"></div>

			<!-- Contenido del banner -->
			<div class="relative z-10 h-full flex items-center justify-center">
				<div class="max-w-4xl mx-auto text-center px-4">
					<h1 class="text-5xl md:text-6xl font-bold mb-6">
						<span class="text-white">CURSOS Y</span>
						<span class="text-[#ffbb01] block">TALLERES</span>
					</h1>
					<p class="text-xl text-white">
						Aprende técnicas profesionales de sublimación y creación de neón
					</p>
				</div>
			</div>
		</section>

		<!-- Talleres -->
		<section class="py-20 px-4">
			<div class="max-w-7xl mx-auto">
				<TalleresPage client:load />
			</div>
		</section>

		<!-- Footer -->
		<Footer />

		<!-- WhatsApp Button -->
		<WhatsAppButton client:load />
	</body>
</html>